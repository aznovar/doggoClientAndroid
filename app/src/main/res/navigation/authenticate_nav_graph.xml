<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authenticate_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ru.appdoggo.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_baseActivity"
            app:destination="@id/baseActivity" />
    </fragment>

    <activity
        android:id="@+id/baseActivity"
        android:name="com.ru.appdoggo.ui.core.BaseActivity"
        android:label="BaseActivity"
        tools:layout="@layout/activity_layout"/>

</navigation>